<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryLightColor"
    tools:context=".UserCredentialsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/indeterminateBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationZ="2dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminate="true"
            tools:visibility="invisible" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dip"
            android:layout_centerHorizontal="true"
            android:text="@string/mobi_conf"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/otp_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryDarkColor"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="106sp"
            android:layout_marginTop="280dp"
            android:textColor="@color/primaryTextColor"
            android:fontFamily="@font/aclonica"
            android:text="@string/fname" />

        <EditText
            android:id="@+id/et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300dp"
            android:autofillHints=""
            android:gravity="center"
            android:textColor="@color/primaryTextColor"
            android:background="@drawable/edit_round"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="106sp"
            android:textColor="@color/primaryTextColor"
            android:layout_marginTop="340sp"
            android:fontFamily="@font/aclonica"
            android:text="@string/email" />

        <EditText
            android:id="@+id/et2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="99sp"
            android:layout_marginTop="360sp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edit_round"
            android:gravity="center"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="400sp"
            android:fontFamily="@font/aclonica"
            android:text="@string/referral_number"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="99sp"
            android:layout_marginTop="440sp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edit_round"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bonus"
            android:textColor="@color/primaryTextColor"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="480sp"/>

        <Button
            android:id="@+id/reg_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="520sp"
            android:background="@drawable/btn_round"
            android:backgroundTint="@color/primaryDarkColor"
            android:fontFamily="@font/aclonica"
            android:text="@string/cont"
            android:textAllCaps="false"
            android:textColor="#FFF" />

        <TextView
            android:id="@+id/tv_disp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="590dp"
            android:textColor="@color/primaryTextColor"/>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
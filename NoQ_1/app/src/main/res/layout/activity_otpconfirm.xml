<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_parent"
    android:background="@color/primaryLightColor"
    tools:context=".OTPConfirmActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.ybq.android.spinkit.SpinKitView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/spin_kit"
            style="@style/SpinKitView.CubeGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            app:SpinKit_Color="@color/colorAccent" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mobi_conf"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100sp"
                android:textColor="@color/primaryTextColor"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textSize="26sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/otp_send"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="240sp"
                android:textColor="@color/primaryTextColor"
                android:fontFamily="sans-serif"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm_otp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/primaryTextColor"
                android:layout_marginTop="260sp"
                android:fontFamily="sans-serif"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/otp_enter"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="340dp"
                android:inputType="number" />

            <Button
                android:id="@+id/btn_continue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="420dp"
                android:background="@drawable/btn_round"
                android:backgroundTint="@color/primaryDarkColor"
                android:textColor="#FFF"
                android:text="@string/cont"
                android:textAllCaps="false"
                android:onClick="OnContinue" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="480dip"
                android:stretchColumns="*"
                android:padding="20dip">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btn_resend_otp"
                        android:layout_width="145dip"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dip"
                        android:background="@drawable/btn_round"
                        android:backgroundTint="@color/primaryDarkColor"
                        android:textColor="#FFF"
                        android:text="@string/resend_otp"
                        android:textAllCaps="false"
                        android:onClick="OnResend" />

                    <Button
                        android:id="@+id/btn_re_enter_no"
                        android:layout_width="145dip"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dip"
                        android:textAllCaps="false"
                        android:background="@drawable/btn_round"
                        android:backgroundTint="@color/primaryDarkColor"
                        android:textColor="#FFF"
                        android:text="@string/enter_p_no"
                        android:onClick="OnRe_Enter" />

                </TableRow>

            </TableLayout>


        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
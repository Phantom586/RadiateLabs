<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_parent"
    android:background="@color/primaryLightColor"
    tools:context=".OTPConfirmActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.ybq.android.spinkit.SpinKitView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/spin_kit"
            style="@style/SpinKitView.CubeGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            app:SpinKit_Color="#FFF" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="115dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="145dp"
                android:src="@drawable/noq_logo" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_otp"
                android:layout_marginTop="90dp"
                />

            <TextView
                android:id="@+id/op_tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/oc_enter_otp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="210dp"
                android:textColor="@color/primaryTextColor"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textSize="36sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Sent to : "
                    android:textColor="#FFF"
                    android:layout_marginTop="13dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/op_tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryTextColor"
                    android:layout_marginTop="13dp"
                    android:ems="7"
                    android:textSize="20sp"/>

                <ImageView
                    android:id="@+id/btn_re_enter_no"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:onClick="OnRe_Enter"
                    android:src="@drawable/ic_num_edit"/>

            </LinearLayout>

            <!--            <EditText-->
            <!--                android:id="@+id/otp_enter"-->
            <!--                android:layout_width="140dp"-->

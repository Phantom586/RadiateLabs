<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/pill_bg"
    tools:context=".MyProfile">

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/mp_bonus_amt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/primaryDarkColor"
            android:gravity="center"
            android:text="@string/mp_temp_bonus"
            android:textColor="#000"
            android:textSize="20sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ns_help"
                android:textColor="#707070"
                android:textSize="22sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="4" >
            </Space>

            <LinearLayout
                android:id="@+id/mp_city_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_city_pin"/>

                <TextView
                    android:id="@+id/mp_city_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="Pune"
                    android:textColor="#707070"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="10dp"
                        android:onClick="alcoholAndBeverage"
                        app:cardBackgroundColor="@color/primaryDarkColor"
                        app:cardCornerRadius="5dp"
                        android:elevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:src="@drawable/alcoholbevg" />

                            <TextView
                                android:id="@+id/mp_alcohol_cs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="invisible"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/round_img_border"
                                android:paddingTop="2dp"
                                android:paddingStart="4dp"
                                android:paddingEnd="4dp"
                                android:paddingBottom="2dp"
                                android:backgroundTint="#FFF"
                                android:layout_marginTop="10dp"
                                android:textSize="12sp"
                                android:text="Coming Soon"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:textSize="13sp"
                                android:text="@string/mp_ab"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp"
                        android:onClick="BooksAndStationary"
                        app:cardBackgroundColor="@color/primaryDarkColor"
                        app:cardCornerRadius="5dp"
                        android:elevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:src="@drawable/stationary" />

                            <TextView
                                android:id="@+id/mp_stationary_cs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="invisible"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/round_img_border"
                                android:paddingTop="2dp"
                                android:paddingStart="4dp"
                                android:paddingEnd="4dp"
                                android:paddingBottom="2dp"
                                android:backgroundTint="#FFF"
                                android:layout_marginTop="10dp"
                                android:textSize="12sp"
                                android:text="Coming Soon"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:textSize="13sp"
                                android:text="@string/mp_stationary"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="10dp"
                        android:onClick="dairyAndBakery"
                        app:cardBackgroundColor="@color/primaryDarkColor"
                        app:cardCornerRadius="5dp"
                        android:elevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:src="@drawable/dairy" />

                            <TextView
                                android:id="@+id/mp_dairy_cs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="invisible"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/round_img_border"
                                android:paddingTop="2dp"
                                android:paddingStart="4dp"
                                android:paddingEnd="4dp"
                                android:paddingBottom="2dp"
                                android:backgroundTint="#FFF"
                                android:layout_marginTop="10dp"
                                android:textSize="12sp"
                                android:text="Coming Soon"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:textSize="13sp"
                                android:text="@string/mp_dairy"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp"
                        android:onClick="grocery"
                        app:cardBackgroundColor="@color/primaryDarkColor"
                        app:cardCornerRadius="5dp"
                        android:elevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:src="@drawable/groceries" />

                            <TextView
                                android:id="@+id/mp_grocery_cs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="invisible"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/round_img_border"
                                android:paddingTop="2dp"
                                android:paddingStart="4dp"
                                android:paddingEnd="4dp"
                                android:paddingBottom="2dp"
                                android:backgroundTint="#FFF"
                                android:layout_marginTop="10dp"
                                android:textSize="12sp"
                                android:text="Coming Soon"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:textSize="13sp"
                                android:text="@string/mp_grocery"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="10dp"
                        android:onClick="meatAndPoultry"
                        app:cardBackgroundColor="@color/primaryDarkColor"
                        app:cardCornerRadius="5dp"
                        android:elevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:src="@drawable/meat" />

                            <TextView
                                android:id="@+id/mp_meat_cs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="invisible"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/round_img_border"
                                android:paddingTop="2dp"
                                android:paddingStart="4dp"
                                android:paddingEnd="4dp"
                                android:paddingBottom="2dp"
                                android:backgroundTint="#FFF"
                                android:layout_marginTop="10dp"
                                android:textSize="12sp"
                                android:text="Coming Soon"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:textSize="13sp"
                                android:text="@string/mp_meat"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp"
                        android:onClick="schoolPayment"
                        app:cardBackgroundColor="@color/primaryDarkColor"
                        app:cardCornerRadius="5dp"
                        android:elevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:src="@drawable/school" />

                            <TextView
                                android:id="@+id/mp_school_cs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="invisible"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/round_img_border"
                                android:paddingTop="2dp"
                                android:paddingStart="4dp"
                                android:paddingEnd="4dp"
                                android:paddingBottom="2dp"
                                android:backgroundTint="#FFF"
                                android:layout_marginTop="10dp"
                                android:textSize="12sp"
                                android:text="Coming Soon"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:textSize="13sp"
                                android:text="@string/mp_school"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </TableRow>

            </TableLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
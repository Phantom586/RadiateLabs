        <com.google.android.material.button.MaterialButton
            android:id="@+id/pd_add_to_basket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button"
            app:cornerRadius="18dp"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="#000"
            android:textSize="14sp"
            android:onClick="Go_to_Basket"
            android:layout_gravity="center"
            android:text="@string/pd_go_to_basket"
            android:backgroundTint="#FFF"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/pd_basket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.Icon"
                app:icon="@drawable/ic_shop_cart"
                app:iconSize="30dp"
                app:iconTint="#000"
                app:cornerRadius="20dp"
                android:textAllCaps="false"
                android:onClick="Add_To_Basket"
                android:text="@string/add_to_b"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_margin="10dp"
                android:backgroundTint="@color/primaryDarkColor" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/pd_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.Icon"
                app:icon="@drawable/ic_next_prod"
                app:iconSize="30dp"
                app:iconTint="#000"
                app:iconGravity="end"
                app:cornerRadius="20dp"

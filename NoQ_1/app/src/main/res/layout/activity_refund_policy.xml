<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryLightColor"
    android:orientation="vertical"
    tools:context=".RefundPolicy">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="start"
                android:onClick="go_back"
                android:src="@drawable/ic_left_arrow"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rp_title"
                android:textSize="24sp"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:layout_marginStart="40dp"
                />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rp_desc"
                    android:textSize="14sp"
                    android:textColor="@color/primaryTextColor"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rp_h1"
                    android:textSize="18sp"
                    android:textColor="@color/primaryTextColor"
                    android:gravity="start"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rp_h1_desc1"
                    android:textSize="14sp"
                    android:textColor="@color/primaryTextColor"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rp_h1_desc2"
                    android:textSize="14sp"
                    android:textColor="@color/primaryTextColor"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rp_h1_desc3"
                    android:textSize="14sp"
                    android:textColor="@color/primaryTextColor"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rp_h1_desc4"
                    android:textSize="14sp"
                    android:textColor="@color/primaryTextColor"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    />

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>



</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/c_im"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:maxHeight="160dp"
            android:background="@color/secondaryTextColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="0dp"
            android:paddingEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ca_prod_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="14sp"
                android:maxLines="2"
                android:textColor="#000"
                android:text="Fresho Farm Eggs - Table Tray, Medium, Antibiotic Residue-Free, 48 Eggs"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ca_prod_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="â‚¹1200"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/plc_in_stock_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ca_delete"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="15dp"
                    android:background="@color/primaryDarkColor"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_delete" />

                <TextView
                    android:id="@+id/ca_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/product_listitem_border"
                    android:ems="3"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="10"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/ca_add"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="15dp"
                    android:background="@color/primaryDarkColor"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_add" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/ci_delete"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:layout_gravity="center_horizontal"
                    android:onClick="Add_To_Basket"
                    android:src="@drawable/ic_bin" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#BDBDBD"/>

</LinearLayout>
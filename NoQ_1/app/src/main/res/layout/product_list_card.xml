<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/plc_product_img"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:maxHeight="160dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:background="@color/secondaryTextColor"/>

            <TextView
                android:id="@+id/plc_prod_display_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:padding="2dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:background="@drawable/round_img_border"
                android:backgroundTint="@color/primaryDarkColor"
                android:ems="2"
                android:textSize="12sp"
                android:textColor="#000"
                android:text="2"/>

            <TextView
                android:id="@+id/plc_prod_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="2dp"
                android:visibility="visible"
                android:gravity="center"
                android:background="@color/ckout_d"
                android:ems="6"
                android:textSize="14sp"
                android:textColor="#FFF"
                android:text="Out of Stock"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="0dp"
            android:paddingEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/plc_p_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="14sp"
                android:maxLines="2"
                android:textColor="#000"
                android:text="Fresho Farm Eggs - Table Tray, Medium, Antibiotic Residue-Free, 48 Eggs"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="₹"/>

                <TextView
                    android:id="@+id/plc_p_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="1200"/>

                <TextView
                    android:id="@+id/plc_p_mrp_rupees_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="bottom"
                    android:textColor="@color/primaryDarkColor"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="₹"/>

                <TextView
                    android:id="@+id/plc_p_mrp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:textColor="@color/primaryDarkColor"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:text="1500"/>

                <TextView
                    android:id="@+id/plc_p_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="8dp"
                    android:textColor="#909090"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:text="₹300"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/plc_in_stock_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/plc_delete"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="15dp"
                    android:background="@color/primaryDarkColor"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_delete" />

                <TextView
                    android:id="@+id/plc_prod_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/product_listitem_border"
                    android:ems="3"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="10"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/plc_add"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="15dp"
                    android:background="@color/primaryDarkColor"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_add" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/plc_add_to_basket"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:layout_gravity="center_horizontal"
                    android:onClick="Add_To_Basket"
                    android:src="@drawable/icon_cart" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#BDBDBD"/>

</LinearLayout>
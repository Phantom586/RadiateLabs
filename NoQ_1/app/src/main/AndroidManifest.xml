<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.younoq.noq">

    <uses-permission android:name="android.hardware.camera2.autofocus" />
    <uses-permission android:name="android.hardware.camera2" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-permission-sdk-23 android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission-sdk-23 android:name="android.permission.CAMERA" />
    <uses-permission-sdk-23 android:name="android.permission.INTERNET" />
    <uses-permission-sdk-23 android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission-sdk-23 android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_app_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_app_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ProductsCategory"></activity>
        <activity android:name=".ChooseShopType" />
        <activity android:name=".ProductsList" />
        <activity android:name=".Covid19" />
        <activity android:name=".TxnDetails" />
        <activity android:name=".LastFiveTxns" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SlideThirdFragment" />
        <activity android:name=".SlideSecondFragment" />
        <activity android:name=".SlideFirstFragment" />
        <activity android:name=".IntroActivity" />
        <activity android:name=".NoqStores" />
        <activity android:name=".PaymentFailed" />
        <activity android:name=".PaymentSuccess" />
        <activity android:name=".RefundPolicy" />
        <activity android:name=".PrivacyPolicy" />
        <activity android:name=".TermsAndConditions" />
        <activity android:name=".ContactUs" />
        <activity android:name=".AboutUs" />
        <activity android:name=".CartActivity" />
        <activity android:name=".ProductDetails" /> <!-- <service android:name="org.eclipse.paho.android.service.MqttService" /> -->
        <activity android:name=".MainActivity" />
        <activity
            android:name=".OTPConfirmActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.younoq.noq.MainActivity" />
        </activity>
        <activity
            android:name=".UserCredentialsActivity"
            android:parentActivityName=".OTPConfirmActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:resource="@array/preloaded_fonts"
                android:value="com.younoq.noq.OTPConfirmActivity" />
        </activity>
        <activity
            android:name=".ReferralSuccessfulActivity"
            android:parentActivityName=".UserCredentialsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.younoq.noq.UserCredentialsActivity" />
        </activity>
        <activity
            android:name=".ReferralUnsuccessfulActivity"
            android:parentActivityName=".UserCredentialsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.younoq.noq.UserCredentialsActivity" />
        </activity>
        <activity
            android:name=".BarcodeScannerActivity"
            android:parentActivityName=".UserCredentialsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.younoq.noq.UserCredentialsActivity" />
        </activity>
        <activity
            android:name=".MyProfile"
            android:label="@string/title_activity_my_profile"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.younoq.noq.MainActivity" />
        </activity>
        <activity
            android:name=".ShopDetails"
            android:parentActivityName=".BarcodeScannerActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.younoq.noq.BarcodeScannerActivity" />
        </activity>
        <activity
            android:name="com.paytm.pgsdk.PaytmPGActivity"
            android:configChanges="keyboardHidden|orientation|keyboard"
            android:screenOrientation="portrait" />
    </application>

</manifest>